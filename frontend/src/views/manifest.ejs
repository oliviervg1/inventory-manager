<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>

    <div class="container">
      <div class="header">
        <h3 class="text-muted">Thought Machine App</h3>
      </div>

      <% include partials/jumbotron.ejs %>

      <div class="row marketing">
        <div class="col-lg-12">
          <% for(var key in manifest) { %>
            <h4 class="border"><%= key.toUpperCase().split('_').join(" ") %></h4>
            <% for(var room in manifest[key]) { %>
              <h5><%= room.toUpperCase() %></h5>
              <ul>
              <% manifest[key][room].forEach(function(item) { %>
                <li>
                  <b>Name:</b> <%= item.name %> -
                  <b>Description:</b> <%= item.description %> -
                  <b>Weight:</b> <%= item.weight %>kg -
                  <b>Is fragile?</b> <%= item.is_fragile %>
                </li>
              <% }); %>
              </ul>
            <% }; %>
          <% } %>
        </div>
      </div>

      <footer class="footer">
        <% include partials/footer.ejs %>
      </footer>

    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
  </body>
</html>
